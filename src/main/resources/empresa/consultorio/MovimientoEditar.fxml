<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="empresa.consultorio.MovimientoEditarController">
    <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <children>
            <Label text="Motivo" />
            <ComboBox fx:id="comboMotivo">
                <!-- Asegúrate de que combobox esté vacío al inicio -->
            </ComboBox>
            <Label text="Monto" />
            <TextField fx:id="textMonto" promptText="Monto" />
            <Label text="Descripción" />
            <TextArea fx:id="textDescripcion" promptText="Descripción" />
        </children>
    </VBox>
</AnchorPane>
